<%= form_for @job do |f| %>
  <div align ="center">
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@job.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @job.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p align="center">
      <%= f.label :title %><br>
      <%= f.text_field :title, :placeholder => "Write title to job title" %>
    </p>
    <p align="center">
      <%= f.label :description %><br>
      <%= f.text_area :description, :placeholder => "Write details for describing the job description" %>
    </p>
    <p align= "center">
      <%= f.label :organization %><br/>
      <%= f.select :organization_id, @organizations.collect { |o| [ o.organization_name ,  o.id ]} %>
    </p><br/>
    <p align="center">
      <%= f.submit %>
    </p>
  </div>
<% end %>
